from datetime import datetime

def calcularañodenacimiento(nombre, edad):
    año_actual = datetime.now().year
    año_nacimiento = año_actual - edad
    return año_nacimiento

def main():
    nombre = input("Por favor, ingresa tu nombre: ")
    edad = int(input("Por favor, ingresa tu edad: "))
    
    año_nacimiento = calcular_año_de_nacimiento(nombre, edad)
    print(f"Hola {nombre}, basado en la información proporcionada, tu año de nacimiento es {año_nacimiento}.")

if _name_ == "main":
    main()
